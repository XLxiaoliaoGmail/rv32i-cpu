// R-Type Instructions Test Program
// Testing all R-type instructions in RV32I

// 设置初始测试值
00500093    // addi x1, x0, 5      # x1 = 5
FFF00113    // addi x2, x0, -1     # x2 = -1 (0xFFFFFFFF)
00A00193    // addi x3, x0, 10     # x3 = 10

// 算术运算测试
002081B3    // add  x3, x1, x2     # x3 = x1 + x2 = 4
40208233    // sub  x4, x1, x2     # x4 = x1 - x2 = 6

// 逻辑运算测试
0020F2B3    // and  x5, x1, x2     # x5 = x1 & x2 = 5
0020E333    // or   x6, x1, x2     # x6 = x1 | x2 = 0xFFFFFFFF
0020C3B3    // xor  x7, x1, x2     # x7 = x1 ^ x2 = 0xFFFFFFFA

// 移位运算测试
00209433    // sll  x8, x1, x2     # x8 = x1 << x2[4:0] = 5 << 31
0020D4B3    // srl  x9, x1, x2     # x9 = x1 >> x2[4:0] = 5 >> 31
4020D533    // sra  x10, x1, x2    # x10 = x1 >> x2[4:0] (arithmetic) = 5 >> 31

// 比较运算测试
0020A5B3    // slt  x11, x1, x2    # x11 = (x1 < x2) ? 1 : 0 = 0
0020B633    // sltu x12, x1, x2    # x12 = (x1 < x2) ? 1 : 0 (unsigned) = 1

// 无限循环
0000006F    // jal x0, 0           # 死循环